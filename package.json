{
  "name": "simple-music-player",
  "productName": "simple-music-player",
  "version": "1.0.0",
  "description": "A Minimal Electron Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:watch": "nodemon --watch main.js --exec npm start",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "simpleMusicPlayer",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "build/appdmg.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marlonchiu/simple-music-player.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marlonchiu/simple-music-player/issues"
  },
  "homepage": "https://github.com/marlonchiu/simple-music-player#readme",
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^21.2.0",
    "nodemon": "^1.19.4"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "electron-store": "^5.0.0",
    "uuid": "^3.3.3"
  }
}
